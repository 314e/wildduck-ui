{
	"compilerOptions": {
		"experimentalDecorators": true,
		"strictNullChecks": false,
		"baseUrl": ".",
		"outDir": "./dist",
		"sourceMap": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"target": "es6",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react",
		"removeComments": true,
		"paths": {
			"app-ui/*": ["src/*"],
			"app-redux/*": ["submodules/wildduck-redux/src/*"],
			"components/*": ["src/components/*"],
			"lib/*": ["src/lib/*"],
			"ui-utils/*": ["src/utils/*"],
			"styles/*": ["src/styles/*"],
			"ui-types/*": ["src/types/*"],
			"actions/*": ["submodules/wildduck-redux/src/actions/*"],
			"action-types/*": ["submodules/wildduck-redux/src/actiontypes/*"],
			"redux-types/*": ["src/types/*"],
			"redux-utils/*": ["submodules/wildduck-redux/src/utils/*"],
			"client/*": ["submodules/wildduck-redux/src/client/*"],
			"redux-constants/*": ["submodules/wildduck-redux/src/constants/*"],
			"redux-config/*": ["submodules/wildduck-redux/src/config/*"],
			"logic/*": ["src/logic/*"],
			"store/*": ["submodules/wildduck-redux/src/store/*"]
		}
	},
	"include": ["src", "submodules/wildduck-redux/src"],
	"exclude": ["node_modules"]
}
